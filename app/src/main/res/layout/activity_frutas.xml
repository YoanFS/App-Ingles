<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30"
    tools:context=".Frutas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frutas"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textStyle="bold  "
        android:fontFamily="sans-serif"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="30"

        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="30"
            android:src="@drawable/banano"
            android:layout_gravity="center"

            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30"
            android:text="@string/banano"
            android:textColor="@color/black"




            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="30"

        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="30"
            android:src="@drawable/manzana"
            android:layout_gravity="center"

            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30"
            android:text="@string/manzana"
            android:textColor="@color/black"




            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="30"

        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="30"
            android:src="@drawable/naranja"
            android:layout_gravity="center"

            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30"
            android:text="@string/naranja"
            android:textColor="@color/black"


            />



    </LinearLayout>

</LinearLayout>